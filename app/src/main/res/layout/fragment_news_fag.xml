<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.newsweats.fragments.NewsFragment">



    <android.support.v7.widget.RecyclerView
        android:id="@+id/newsRecyclers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/searchwithnews" />

    <android.support.v7.widget.SearchView
        android:id="@+id/searchwithnews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="3dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/searchwithnews"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/searchwithnews"
        android:layout_gravity="top|right"
        android:layout_marginBottom="59dp"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:src="@drawable/ic_action_grid"
        android:tint="@color/edit_txt_bg"
        app:backgroundTint="@color/fabback"
        app:layout_anchor="@+id/container"
        app:layout_anchorGravity="top|right" />


</RelativeLayout>